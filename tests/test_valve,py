"""
Test suite for the ValveEntity class.
"""

import asyncio
import logging
from aioesphomeserver import Device, ValveEntity, ValveCommandRequest

logging.basicConfig(level=logging.INFO)

class TestValveEntity(ValveEntity):
    def __init__(self, name):
        super().__init__(name=name, supports_position=True, supports_stop=True)

    async def simulate_valve_command(self, position: float, stop: bool = False):
        """
        Simulate a valve command for testing.
        """
        await self.log(logging.INFO, self.DOMAIN, f"Simulating valve command for {self.name}: position={position}, stop={stop}")
        command_request = ValveCommandRequest(key=self.key, has_position=True, position=position, stop=stop)
        await self.handle(self.key, command_request)

async def run_device(name, api_port, web_port):
    logging.info(f"Setting up {name} with API port {api_port} and Web port {web_port}")

    mac_address = f"AC:BC:32:89:0E:{api_port:02x}"

    device = Device(
        name=name,
        mac_address=mac_address,
        model="Test Valve",
        project_name="aioesphomeserver",
        project_version="1.0.0",
        network="wifi",
        board="esp01_1m",
        platform="ESP8266"
    )

    test_valve = TestValveEntity(name=f"{name} Valve")
    device.add_entity(test_valve)

    asyncio.create_task(test_valve.simulate_valve_command(0.5))

    try:
        await device.run(api_port, web_port)
    finally:
        await device.unregister_zeroconf()

async def main():
    """
    Main entry point for setting up and running the valve device.
    """
    await run_device("Test Valve", 6053, 8080)

if __name__ == "__main__":
    logging.info("Starting main event loop")
    try:
        asyncio.run(main())
    except KeyboardInterrupt:
        logging.info("Received exit signal (Ctrl+C). Cleaning up and exiting.")
    except asyncio.CancelledError:
        logging.info("Main event loop was cancelled")
